<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping>
    <class name="com.javabean.UserBean" table="UserBean">
        <id name="u_id">
            <generator class="native"></generator>
        </id>
        <property name="u_name"></property>
        <property name="u_code"></property>
        <property name="u_password"></property>
        <property name="u_state"></property>
        <set name="roles" table="sys_user_role" cascade="update">
            <key column="user_id"></key>
            <many-to-many class="com.javebean.Role" column="role_id"></many-to-many>
        </set>
    </class>
</hibernate-mapping>